<h1>Today</h1>
<% if @tasks.empty? %>
    <p>All tasks complete.</p>
<% else %>
    <table>
        <thead>
            <tr>
                <th>Task</th>
                <th>Done</th>
                <th colspan="3">Actions</th>
            </tr>
        </thead>
    <% @tasks.each do |task| %>
            <tr>
                <td><%= task.title %></td>
                <td style="text-align: center"><%= task.completed ? " ✅" : " 📝" %></td>
                <td><%= link_to task.completed ? "Mark incomplete" : "Mark complete",
                        task_path(task, task: {completed: !task.completed}),
                        method: :patch,
                        data: { turbo_method: :patch}%>
                </td>
                <td> | </td>
                <td><%= link_to "Delete", task_path(task), data: { turbo_method: :delete} %></td>
            </tr>
        <% end %>
    </table>
<% end %>
<%= form_with model: @task, local: true do |form| %>
    <p>
        <%= form.label :new_task %><br/>
        <%= form.text_field :title %>
    </p>

    <p>
        <%= form.submit %>
    </p>
<% end %>