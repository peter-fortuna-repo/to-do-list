<h1 class="text-center mt-4 mb-4">Signup</h1>
<%= render("shared/alerts") %>
<div class="d-flex align-items-center">
    <div class="col-8 mx-auto">
    <%= form_with(model: @user) do |f|%>
        <div class="form-group row mb-3">
            <%= f.label :email, class: "form-label" %>
            <%= f.email_field :email, class: "form-control", placeholder: "Enter your email address" %>
        </div>

        <div class="row mb-3">
            <div class="col ps-0">
                <%= f.label :first_name, class: "form-label" %>
                <%= f.text_field :first_name, class: "form-control", placeholder: "Enter first name" %>
            </div>
            <div class="col pe-0">
                <%= f.label :last_name, class: "form-label" %>
                <%= f.text_field :last_name, class: "form-control", placeholder: "Enter last name" %>
            </div>
        </div>
        
        <div class="form-group row mb-3">
            <%= f.label :username, class: "form-label" %>
            <%= f.text_field :username, class: "form-control", placeholder: "Select a username" %>
        </div>

        <div class="form-group row mb-3">
            <%= f.label :password, class: "form-label" %>
            <%= f.password_field :password, class: "form-control", placeholder: "Select a password" %>
        </div>

        <%= f.submit "Sign up", class: "btn btn-primary"%>
    </div>
</div>
<% end %>